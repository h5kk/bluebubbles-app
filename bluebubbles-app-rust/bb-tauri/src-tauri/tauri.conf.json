{
  "$schema": "https://raw.githubusercontent.com/niceda/tauri-schema/refs/tags/v2.1.0/schema.json",
  "productName": "BlueBubbles",
  "version": "0.1.0",
  "identifier": "com.bluebubbles.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BlueBubbles",
        "width": 1100,
        "height": 750,
        "minWidth": 400,
        "minHeight": 500,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "BlueBubbles"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
